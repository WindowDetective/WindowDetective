<?xml version="1.0" encoding="utf-8"?>
<VisualStudioToolFile
    Name="Qt GUI Toolkit Rules"
    Version="8.00"
    >
    <Rules>
        <CustomBuildRule
            Name="UIC"
            DisplayName="Qt UI Compiler"
            CommandLine="%QTDIR%\bin\uic.exe [Inputs] -o &quot;$(InputDir)[UicPrefix]$(InputName)[UicExt]&quot;"
            Outputs="[UicPrefix]$(InputName)[UicExt]"
            AdditionalDependencies="[Inputs]"
            FileExtensions="*.ui"
            ExecutionDescription="UIC $(InputName)"
            >
            <Properties>
                <StringProperty
                    Name="UicExt"
                    DisplayName="UI Header file extension"
                    Category="Output"
                    Description="The header file extension generated by the UIC Compiler. (Example: .h)"
                    HelpURL="http://code.google.com/p/xr-qt-msvc/"
                    Switch="[value]"
                    DefaultValue=".h"
                />
                <StringProperty
                    Name="UicPrefix"
                    DisplayName="UI Header file prefix"
                    Category="Output"
                    Description="The prefix string to be used for UIC output. ( usually ui_ )"
                    HelpURL="http://code.google.com/p/xr-qt-msvc/"
                    Switch="[value]"
                    DefaultValue="ui_"
                />
            </Properties>
        </CustomBuildRule>
        <CustomBuildRule
            Name="MOC"
            DisplayName="Qt Meta Object Compiler"
            CommandLine="%QTDIR%\bin\moc.exe [MocNoWarnings] [CoreLib] [Shared] [Thread] [Unicode] [LargeFile] [Keywords] [OpenGLLib] [NoDebug] [GuiLib] -I&quot;$(QTDIR)\include\QtCore&quot; -I&quot;$(QTDIR)\include\QtGui&quot; -I&quot;$(QTDIR)\include&quot; -I&quot;.\$(ConfigurationName)\moc&quot; -I&quot;.&quot; -I$(QTDIR)\mkspecs\win32-msvc2008 -DWIN32 -D_MSC_VER=1500 [Inputs] -o&quot;.\$(ConfigurationName)\moc\[MocPrefix]$(InputName).cpp&quot; &amp;&amp; cl.exe &quot;.\$(ConfigurationName)\moc\[MocPrefix]$(InputName).cpp&quot; [CppCompilerOptions] /Fo&quot;$(IntDir)[MocPrefix]$(InputName).obj&quot;"
            Outputs="$(IntDir)[MocPrefix]$(InputName).obj"
            FileExtensions="*.hpp"
            ExecutionDescription="MOC $(InputName)"
            >
            <Properties>
                <StringProperty
                    Name="MocPrefix"
                    DisplayName="Output file prefix"
                    Category="Output"
                    Description="A prefix is added to the source and object files generated to prevent conflict with your source files. [Example: moc_ leads to a.hxx -&gt; moc_a.cpp]"
                    HelpURL="http://code.google.com/p/xr-qt-msvc/"
                    Switch="[value]"
                    DefaultValue="moc_"
                />
                <StringProperty
                    Name="CppCompilerOptions"
                    DisplayName="C++ Command Line Options"
                    Category="General"
                    Description="Copy the command line options from your C/C++ section to match the qt compilation with your setup. Make sure you remove the /Fo option, for more details refer to the documentation."
                    HelpURL="http://code.google.com/p/xr-qt-msvc/"
                    Switch="[value]"
                />
                <BooleanProperty
                    Name="Shared"
                    DisplayName="Use QT as a Shared Library?"
                    Category="Moc Definitions"
                    Description="Use QT as a Shared Library?"
                    Switch="-DQT_SHARED"
                    DefaultValue="true"
                />
                <BooleanProperty
                    Name="Thread"
                    DisplayName="Multi-threaded Support?"
                    Category="Moc Definitions"
                    Switch="-DQT_THREAD_SUPPORT"
                    DefaultValue="true"
                />
                <BooleanProperty
                    Name="Unicode"
                    DisplayName="Unicode Support?"
                    Category="Moc Definitions"
                    Switch="-DUNICODE"
                    DefaultValue="true"
                />
                <BooleanProperty
                    Name="LargeFile"
                    DisplayName="Large File Support?"
                    Category="Moc Definitions"
                    Switch="-DQT_LARGEFILE_SUPPORT"
                    DefaultValue="true"
                />
                <BooleanProperty
                    Name="Keywords"
                    DisplayName="Disable QT Keywords."
                    Category="Moc Definitions"
                    Description="If QT_NO_KEYWORDS is defined, &quot;signals&quot;, &quot;slots&quot; and &quot;emit&quot; are not defined, thus increasing the interoperability with other toolkits by avoiding some common name clashes. However, the SIGNAL() and SLOT() macros are still defined, which may cause name clashes still."
                    Switch="-DQT_NO_KEYWORDS"
                />
                <BooleanProperty
                    Name="NoDebug"
                    DisplayName="Disable QT Debuging"
                    Category="Moc Definitions"
                    Switch="-DQT_NO_DEBUG"
                    DefaultValue="true"
                />
                <BooleanProperty
                    Name="GuiLib"
                    DisplayName="Use QT Gui Library"
                    Category="QT Libraries"
                    Switch="-DQT_GUI_LIB"
                    DefaultValue="true"
                />
                <BooleanProperty
                    Name="CoreLib"
                    DisplayName="Use QT Core Library"
                    Category="QT Libraries"
                    Switch="-DQT_CORE_LIB"
                    DefaultValue="true"
                />
                <BooleanProperty
                    Name="OpenGLLib"
                    DisplayName="Use QT OpenGL Library"
                    Category="QT Libraries"
                    Switch="-DQT_OPENGL_LIB"
                />
                <BooleanProperty
                    Name="MocNoWarnings"
                    DisplayName="Do not display warnings"
                    Category="General"
                    Description="Do not display warnings"
                    Switch="/nw"
                />
                <BooleanProperty
                    Name="Dll"
                    DisplayName="Dll"
                    Switch="-DQT_DLL"
                    DefaultValue="true"
                />
            </Properties>
        </CustomBuildRule>
        <CustomBuildRule
            Name="QRC"
            DisplayName="Qt Resource Compiler"
            CommandLine="%QTDIR%\bin\rcc.exe [FunctionName] [Threshold] [Compress] [Inputs] -o &quot;.\$(ConfigurationName)\rcc\[QrcPrefix]$(InputName).cpp&quot; &amp;&amp; cl.exe &quot;.\$(ConfigurationName)\rcc\[QrcPrefix]$(InputName).cpp&quot; [CppCompilerOptions] /Fo&quot;$(IntDir)[QrcPrefix]$(InputName).obj&quot;"
            Outputs="$(IntDir)[QrcPrefix]$(InputName).obj"
            FileExtensions="*.qrc"
            ExecutionDescription="QRC $(InputName)"
            >
            <Properties>
                <StringProperty
                    Name="CppCompilerOptions"
                    DisplayName="C++ Command Line Options"
                    Category="General"
                    Description="Copy the command line options from your C/C++ section to match the qt compilation with your setup. Make sure you remove the /Fo option, for more details refer to the documentation."
                    HelpURL="http://code.google.com/p/xr-core/wiki/QtRules"
                    Switch="[value]"
                />
                <StringProperty
                    Name="QrcPrefix"
                    DisplayName="Output file prefix"
                    Category="Output"
                    Description="A prefix is added to the source and object files generated to prevent conflict with your source files. [Example: qrc_ leads to a.qrc -&gt; qrc_a.cpp]"
                    HelpURL="http://code.google.com/p/xr-qt-msvc/"
                    Switch="[value]"
                    DefaultValue="qrc_"
                />
                <IntegerProperty
                    Name="Threshold"
                    DisplayName="Compression Threshold"
                    Category="Compression"
                    Description="Specifies a threshold level (in bytes) to use when deciding whether to compress a file. If the file is smaller than the threshold level, it is not compressed. The default threshold level is 70 bytes."
                    Switch="-threshold [value]"
                    DefaultValue="70"
                />
                <IntegerProperty
                    Name="Compress"
                    DisplayName="Compression Level"
                    Category="Compression"
                    Description="Compress input files to the given compression level, which is an integer in the range 1 to 9. Level 1 does the least compression but is fastest. Level 9 does the most compression but is slowest. To turn off compression, use -no-compress. The default value for level is -1, which means use zlib&apos;s default compression level."
                    Switch="-compress [value]"
                    DefaultValue="-1"
                />
                <StringProperty
                    Name="FunctionName"
                    DisplayName="Function Name"
                    Category="General"
                    Description="Create an external initialization function with name."
                    Switch="-name [value]"
                />
            </Properties>
        </CustomBuildRule>
    </Rules>
</VisualStudioToolFile>
